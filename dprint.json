{
	"lineWidth": 100,
	"useTabs": true,
	"indentWidth": 4,
	"typescript": {
		"arrayExpression.preferHanging": "onlySingleItem",
		"arrowFunction.useParentheses": "force",
		"binaryExpression.operatorPosition": "nextLine",
		"ifStatement.nextControlFlowPosition": "maintain",
		"nextControlFlowPosition": "nextLine", // Stroustrup style braces.
		"semiColons": "always",
		"trailingCommas": "onlyMultiLine"
	},
	"prettier": {
		"yml.tabWidth": 4,
		"yaml.tabWidth": 4,
		"yml.singleQuote": true,
		"yaml.singleQuote": true
	},
	"includes": [
		"**/*.{ts,js,json,md,yml,yaml}"
	],
	"excludes": [
		"**/node_modules",
		"**/*-lock.json",
		"tsconfig.json",
		"CHANGELOG.md"
	],
	"plugins": [
		"https://plugins.dprint.dev/typescript-0.88.4.wasm",
		"https://plugins.dprint.dev/json-0.19.0.wasm",
		"https://plugins.dprint.dev/markdown-0.16.2.wasm",
		"https://plugins.dprint.dev/prettier-0.27.0.json@3557a62b4507c55a47d8cde0683195b14d13c41dda66d0f0b0e111aed107e2fe"
	]
}
